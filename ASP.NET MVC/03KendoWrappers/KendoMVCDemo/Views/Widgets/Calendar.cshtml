@{
    ViewBag.Title = "Calendar";
}

<h2>Calendar</h2>

@(Html.Kendo()
.Calendar()
.Name("calendar").Min(DateTime.Now.AddMonths(-3)).Max(DateTime.Now.AddMonths(3))
.Events(events =>
    {
        events.Change("selectDate");
    }
))

<div id="selected-date">

</div>

<script>
    
    function selectDate() {
        $("#selected-date").html(this.value());
    }
</script>