                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Library System", "Index", "Home", null, new { @class = "brand" })
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li>@Html.ActionLink("Books", "Index", "Books", new { area = "Administration" }, new { })</li>
                        <li>@Html.ActionLink("Categories", "Index", "Categories", new { area = "Administration" }, new { })</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Widgets
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Calendar", "Calendar", "Widgets", new {area = "" }, new { })</li>
                                <li>@Html.ActionLink("AutoComplete", "AutoComplete", "Widgets", new { area = "" }, new { })</li>
                                <li>@Html.ActionLink("DropDownList", "DropDownList", "Widgets", new { area = "" }, new { })</li>
                                <li>@Html.ActionLink("TreeView", "TreeView", "Widgets", new { area = "" }, new { })</li>
                                <li>@Html.ActionLink("Upload", "Upload", "Widgets", new { area = "" }, new { })</li>

                            </ul>
                        </li>
                    </ul>
