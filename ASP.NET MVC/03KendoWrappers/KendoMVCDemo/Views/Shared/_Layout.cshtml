                        .Menu()
                        .Name("main-menu")
                        .Direction(MenuDirection.Bottom)
                        .Items(item =>
                        {
                            item.Add().Text("Home").Action("Index", "Home");
                            item.Add().Text("About").Action("About", "Home");
                            item.Add().Text("Widgets").Items(children =>
                                {
                                    children.Add().Text("Calendar").Action("Calendar", "Widgets");
                                    children.Add().Text("AutoComplete").Action("AutoComplete", "Widgets");
                                    children.Add().Text("DropDownList").Action("DropDownList", "Widgets");
                                    children.Add().Text("TreeView").Action("TreeView", "Widgets");
                                    children.Add().Text("Upload").Action("Upload", "Widgets");

                                    if (User.Identity.IsAuthenticated)
                                    {
                                        children.Add().Text("BooksGrid").Action("Index", "Administration/Books");
                                    }
                                });
                        }))*@
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
